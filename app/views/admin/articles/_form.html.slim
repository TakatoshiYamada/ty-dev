= form_with(model: [:admin, @blog, @article], local: true) do |form|
  .field
    = form.label :title
    = form.text_field :title

  .field
    = form.label :content
    = form.text_area :content

  .field
    = form.label :thumbnail
    = form.file_field :thumbnail

  .field
    = form.label :images
    = form.file_field :images, multiple: true

  .actions
    = form.submit 'Update Article'

= link_to 'Back', admin_blog_articles_path(@blog)
